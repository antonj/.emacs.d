background: -webkit-gradient(
    linear,
    left bottom,
    left top,
    color-stop(1, ${1:rgb(255,255,255)}),
    color-stop(0, ${2:rgb(0,0,0)})
);
background: -moz-linear-gradient(
    center bottom,
    $2 0%,
    $1 100%
);